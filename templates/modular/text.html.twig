{% set grid_size = theme_var('grid-size') %}
{% set image = page.media.images|first %}

<section class="section modular-text {{ page.header.class }} bg-gray">
    <section class="container">
        <div class="grid grid-cols-2">
            {% if image %}
                <div class="">
                    {{ image.html|raw }}
                </div>
                <div class="">
                    {{ content|raw }}
                </div>
            {% else %}
                <div class="">
                    {{ content|raw }}
                </div>
            {% endif %}
        </div>
    </section>
</section>
